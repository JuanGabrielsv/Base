/* 15.- Escribe un programa en que dado un número por teclado del 1 a 7 escriba el correspondiente nombre
del día de la semana. */

package tema2;
import java.util.Scanner;

public class Ejercicios_iniciales_15 {
	
	public static void main(String[]args) {
		
		Scanner sc = new Scanner(System.in);
		Integer entradaUsuario;
		
		System.out.println("Introduce un número entero entre 1 y 7:");
		entradaUsuario = sc.nextInt();
		
		if (entradaUsuario == 1) {
			System.out.println("LUNES");
		}
		else if (entradaUsuario == 2) {
			System.out.println("MARTES");
		}
		else if (entradaUsuario == 3) {
			System.out.println("MIÉRCOLES");
		}
		else if (entradaUsuario == 4) {
			System.out.println("JUEVES");
		}
		else if (entradaUsuario == 5) {
			System.out.println("VIERNES");
		}
		else if (entradaUsuario == 6) {
			System.out.println("SÁBADO");
		}
		else {
			System.out.println("DOMINGO");
		}
		sc.close();
	}
}
