/* EJERCICIO 4
Realiza un programa que solicite al usuario su número favorito. A continuación, debe solicitar
su ciudad favorita.
¿Algo no te funciona? ¿Qué ha pasado? Intenta arreglarlo buscándote la vida… */

package t1_ejercicios_repaso;
import java.util.Scanner;
public class T1_ejercicio_repaso4 {
	public static void main(String[] args) {
		
/* DECLARACIÓN DE VARIABLES */
		Integer favorito;
		String ciudad;
		
/* OBTENER INFORMACIÓN POR TECLADO */
		Scanner sc = new Scanner (System.in);
		System.out.println("¿Cuál es tu número favorito? ");
		favorito = sc.nextInt();
		sc.nextLine();
		System.out.println("¿Cuál es tu ciudad favorita? ");
		ciudad = sc.nextLine();
		
/* DEVOLVEMOS EL RESULTADO */
		System.out.println(" " + favorito + ciudad);
		System.out.println(" " + ciudad);
		sc.close();
	}
}